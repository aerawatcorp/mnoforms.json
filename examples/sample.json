{
    "$schema": "https://mnoforms.com/specs/v1/master.schema.json",
    "form": {
        "fields": [
            {
                "name": "name",
                "label": "Name",
                "type": "text",
                "attributes": {
                    "is_required": true
                }
            }, {
                "name": "gender", 
                "label": "Gender", 
                "type": "text",
                "choices": [
                    "male", "female", "others", "not specified"
                ], 
                "attributes": {
                    "is_required": true,
                    "is_null": false
                }, 
                "render": {
                    "placeholder": "Please specify your gender",
                    "input": "radio"
                }
            }, 
            {
                "name": "highest_qualification", 
                "label": "Highest Qualification in School",
                "type": "text",
                "choices": [
                    {
                        "label": "Primary School Leaving Certificate",
                        "value": "slc"
                    },
                    {
                        "label": "High School Leaving Certificate",
                        "value": "highschool"
                    },
                    {
                        "label": "Undergraduate",
                        "value": "undergraduate"
                    },
                    {
                        "label": "Graduate",
                        "value": "graduate"
                    },
                    {
                        "label": "Post Graduate",
                        "value": "phd"
                    }
                ]
            }
        ]
    }
}